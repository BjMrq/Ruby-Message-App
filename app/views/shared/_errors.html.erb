<% if obj.errors.any? %>
  <div class="row">
    <div class=" ">
      <div class=" ">
        <div class=" ">
          <h2 class=" ">
            <%= pluralize(obj.errors.count, "error") %>
            The following errors occured:
          </h2>
          <div class=" ">
            <ul>
              <% obj.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
