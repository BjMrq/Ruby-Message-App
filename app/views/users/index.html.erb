<h1 align="center">People</h1>
<br>
<div align="center">

  <% @users.each do |user| %>
  <br>
    <ul class="container">
      <div class="ui one column grid centered">
        <div class="ui card">
          <div class="content">
            <li class="header">
              <%= user.username %>
            </li>
            <% if logged_in? && current_user.admin? %>
            <br>
              <%= link_to "Delete this user", user_path(user), method: :delete, data: {confirm: "Are you sure?"} %>
            <% end %>
          </div>
        </div>
      </div>
    </ul>
  <% end %>

</div>
